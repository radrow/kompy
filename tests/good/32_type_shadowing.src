# Test: Variable shadowing with different types and complex control flow
# Expected: 1\nhello\n5\nworld\n42
void main() {
    int value = 100;
    bool condition = true;
    
    if condition {
        # Shadow int with bool
        bool value = true;
        if value {
            print_bool(value);
        }
        
        # Shadow bool with string in nested scope  
        if condition && value {
            string value = "hello";
            print_string(value);
            
            # Multiple levels of shadowing
            if value == "hello" {
                int value = 5;
                print_int(value);
                
                if value > 3 {
                    string value = "world"; 
                    print_string(value);
                }
            }
        }
    }
    
    # Original value should be accessible again
    print_int(value - 58);
}
